        <Button Style="{StaticResource black}" Grid.Column="6" Grid.Row="7" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="7" Grid.Row="7" ></Button>

        <ListBox x:Name="lbData" Grid.Column="8" HorizontalAlignment="Left" Height="168" Margin="0.4,0,-0.4,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="88" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
