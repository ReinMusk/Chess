<Window x:Class="WpfChess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChess"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="Field">
            <EventSetter Event="Button.Click" Handler="Button_Click" />
            
        </Style>
        <Style x:Key="black" BasedOn="{StaticResource Field}">
            <Setter Property="ItemsControl.Background" Value="LightGray"></Setter>
        </Style>
        <Style x:Key="white" BasedOn="{StaticResource Field}">
            <Setter Property="ItemsControl.Background" Value="White"></Setter>
        </Style>
    </Window.Resources>
    <Grid Name="GridCtrl">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition  />
            <ColumnDefinition  />
            <ColumnDefinition  />
            <ColumnDefinition  />
            <ColumnDefinition />
            <ColumnDefinition  />
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Style="{StaticResource white}" Grid.Column="0" Grid.Row="0" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="1" Grid.Row="0" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="2" Grid.Row="0" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="3" Grid.Row="0" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="4" Grid.Row="0" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="5" Grid.Row="0" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="6" Grid.Row="0" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="7" Grid.Row="0" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="0" Grid.Row="1" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="1" Grid.Row="1" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="2" Grid.Row="1" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="3" Grid.Row="1" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="4" Grid.Row="1" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="5" Grid.Row="1" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="6" Grid.Row="1" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="7" Grid.Row="1" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="0" Grid.Row="2" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="1" Grid.Row="2" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="2" Grid.Row="2" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="3" Grid.Row="2" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="4" Grid.Row="2" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="5" Grid.Row="2" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="6" Grid.Row="2" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="7" Grid.Row="2" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="0" Grid.Row="3" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="1" Grid.Row="3" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="2" Grid.Row="3" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="3" Grid.Row="3" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="4" Grid.Row="3" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="5" Grid.Row="3" ></Button>
        <Button Style="{StaticResource black}" Grid.Column="6" Grid.Row="3" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="7" Grid.Row="3" ></Button>
        <Button Style="{StaticResource white}" Grid.Column="0" Grid.Row="4" ></Button>
